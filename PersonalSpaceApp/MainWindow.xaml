        <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="1" Stretch="None" AlignmentX="Left">
            <VisualBrush.Visual>
                <Grid Margin="0" Width="297" Height="30" >
                    <Border  Background="#0e7bd0"  BorderBrush="Transparent" BorderThickness="0"  CornerRadius="3" >
                        <TextBox Text="请输入关键字"  CaretBrush="#FFAFD7F5" Background="Transparent" BorderThickness="0" Padding="20,0,0,0"   Foreground="#FFAFD7F5" FontSize="14"  FontFamily="Microsoft YaHei"  Margin="0" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" />
                    </Border>
                </Grid>

            </VisualBrush.Visual>
        </VisualBrush>
        <Style TargetType="TextBox" x:Key="txtSearchStyle">
            <Style.Setters>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value >
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border" Background="#0e7bd0"  BorderBrush="Transparent" BorderThickness="0"  CornerRadius="3" >
                                <Grid   >
                                    <TextBox  CaretBrush="#FFAFD7F5" BorderThickness="0" Padding="20,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Transparent"  x:Name="txtP"  Text="{TemplateBinding Text}" Foreground="#FFAFD7F5" FontSize="14"  FontFamily="Microsoft YaHei"/>
                                    <!--<Microsoft_Windows_Themes:ListBoxChrome x:Name="Bd"    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"  RenderMouseOver="{TemplateBinding IsMouseOver}" RenderFocused="{TemplateBinding IsKeyboardFocusWithin}" SnapsToDevicePixels="true">
                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Microsoft_Windows_Themes:ListBoxChrome>-->
                                    <Border Background="#076fc0"  BorderBrush="Transparent" BorderThickness="0"  CornerRadius="3" Width="39" Height="30" HorizontalAlignment="Right" >
                                        <Image Stretch="Fill"  Cursor="Hand" HorizontalAlignment="Right"   Width="19" Height="21" Source="pack://application:,,,/Image/搜索-拷贝.png" RenderOptions.BitmapScalingMode="NearestNeighbor" UseLayoutRounding="True"  Margin="3,0,9,0"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="{x:Null}"  SourceName="txtP">
                                    <Setter Property="Background" Value="{StaticResource HelpBrush}"  TargetName="border"/>
                                </Trigger>
                                <Trigger Property="Text" Value="" SourceName="txtP">
                                    <Setter Property="Background" Value="{StaticResource HelpBrush}" TargetName="border"/>
                                </Trigger>


                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="#FFAFD7F5"/>
                <Setter Property="Height" Value="Auto"/>

            </Style.Setters>

        </Style>

