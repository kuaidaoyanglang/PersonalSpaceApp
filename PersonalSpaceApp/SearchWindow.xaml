                                        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Foreground" Value="#2870b3"/>
                                        <!--<Setter Property="FontWeight" Value="Bold"/>-->
                                    </Style>
                                </StackPanel.Resources>
