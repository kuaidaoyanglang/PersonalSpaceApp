                                    <Common:NavicateListViewItem   Style="{StaticResource NavicateListViewItemStyle2}"  NavicateType="Resource_DownLoad"  BG_Corner="2"  IsEnabled="{Binding ControlPanelEnable}" BG_Brush="#efefef"  
